@model QualityHat.Models.ShoppingCartViewModels.ShoppingCartViewModel

@{
	ViewData["Title"] = "Default";
}

<h5><span class="glyphicon glyphicon glyphicon-shopping-cart"></span> Your Currently Selected:</h5>


<div class="container">
	<div class="row">
		<div class="col-sm-2">
			<h5 class="display-4">Hat</h5>
		</div>
		<div class="col-sm-2">
			<h5 class="display-4">Quantity</h5>
		</div>
		<div class="col-sm-2">
			<h5 class="display-4">Price</h5>
		</div>
	</div>

	@foreach (var item in Model.CartItems)
	{
		<div class="row">
			<div class="col-sm-2">
				<a asp-action="Details" asp-route-id="@item.Hat.HatID">@item.Hat.Name</a>
			</div>
			<div class="col-sm-2">@item.Count
				<a asp-action="RemoveFromCart" asp-controller="ShoppingCart" asp-route-id="@item.Hat.HatID">
					<span class="glyphicon glyphicon-remove-circle"></span>
				</a>
			</div>
			<div class="col-sm-2">
				$@item.Hat.Price
			</div>
		</div>
	}
	<hr />

	<div class="row">
		<div class="col-sm-2">GST:</div>
		<div class="col-sm-2">$@Model.CartGST</div>
		<div class="col-sm-2">Grand Total:</div>
		<div class="col-sm-2">$@Model.CartTotal</div>
		<div class="col-sm-2">
			@if (@Model.CartItems.Count > 0)
			{
					<a asp-action="AddToBag" asp-controller="MemberOrders" class="badge badge-primary">
						<span class="badge badge-primary">Add to Bag</span>
					</a>
			}
		</div>
	</div>

</div>
