@model QualityHat.Models.ShoppingBagViewModels.ShoppingBagViewModel

@{
    ViewData["Title"] = "Recipient";
}

<div class="row">
    <div class="col-xs-6 col-md-9">
      <select onchange="location.href='/Recipients/SetDefault?id=' + this.value;" class="form-control" style="min-width:500px;overflow:auto;">
        @foreach (var item in Model.Recipients)
        {
          <option value="@item.RecipientId">
              @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName),@Html.DisplayFor(modelItem => item.Address1),
              @Html.DisplayFor(modelItem => item.Phone), @Html.DisplayFor(modelItem => item.City)
          </option>
        }
      </select>
    </div>
    <div class="col-xs-2 col-md-2">
      <a asp-controller="Recipients" asp-action="Create" class="pull-right"> Create New </a>
    </div>
    <div class="col-xs-2 col-md-1">
      <a asp-controller="Recipients" asp-action="Index" class="pull-center"> List All </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Phone)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Order.Address1)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Order.Address2)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Order.City)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Order.State)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Order.Country)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Order.PostalCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
              @Html.DisplayFor(model => model.Order.FirstName)
            </td>
            <td>
              @Html.DisplayFor(model => model.Order.LastName)
            </td>
            <td>
              @Html.DisplayFor(model => model.Order.Phone)
            </td>
            <td>
              @Html.DisplayFor(model => model.Order.Address1)
            </td>
            <td>
              @Html.DisplayFor(model => model.Order.Address2)
            </td>
            <td>
              @Html.DisplayFor(model => model.Order.City)
            </td>
            <td>
            @Html.DisplayFor(model => model.Order.State)
            </td>
            <td>
              @Html.DisplayFor(model => model.Order.Country)
            </td>
            <td>
              @Html.DisplayFor(model => model.Order.PostalCode)
            </td>
        </tr>
    </tbody>
</table>
