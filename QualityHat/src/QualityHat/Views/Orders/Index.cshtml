@model IEnumerable<QualityHat.Models.Order>

@{
    ViewData["Title"] = "Index";
    var s = "";
    var i = "";
}

<h2>Orders List</h2>

<!-- <p>
    <a asp-action="Create">Create New</a>
</p> -->
<table class="table">
    <thead>
        <tr>
            <th>
                Account
            </th>
            <th>
                Status
            </th>
            <th>
                Recipient
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.GST)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                <!-- <select asp-items="@ViewBag.OrderStatus" class="form-control"></select> -->
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>@i @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.GST)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-controller="MemberOrders" asp-action="OrderDetail" asp-route-id="@item.OrderId">Detail</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
